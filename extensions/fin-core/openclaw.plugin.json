{
  "id": "fin-core",
  "name": "Financial Core",
  "description": "Core financial infrastructure: exchange registry, risk controller, shared types",
  "kind": "financial",
  "configSchema": {
    "type": "object",
    "properties": {
      "exchanges": {
        "type": "object",
        "description": "Exchange configurations keyed by exchange ID"
      },
      "trading": {
        "type": "object",
        "properties": {
          "enabled": { "type": "boolean", "default": false },
          "maxAutoTradeUsd": { "type": "number", "default": 100 },
          "confirmThresholdUsd": { "type": "number", "default": 500 },
          "maxDailyLossUsd": { "type": "number", "default": 1000 },
          "maxPositionPct": { "type": "number", "default": 25 },
          "maxLeverage": { "type": "number", "default": 1 }
        }
      }
    }
  }
}
